<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/cl_hob_intro"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.ekek.viewmodule.time.AnalogicClockView
                android:id="@+id/acv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:viewmodule_analogicDateTextSize="@dimen/intromodule_date"
                app:viewmodule_analogicDateTextColor="@android:color/white" />

            <com.ekek.viewmodule.time.DigitalClockView
                android:id="@+id/dcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:viewmodule_digitalTimeTextSize="@dimen/intromodule_digital_time"
                app:viewmodule_digitalTimeTextColor="@android:color/white"
                app:viewmodule_digitalDateTextSize="@dimen/intromodule_date"
                app:viewmodule_digitalDateTextColor="@android:color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/intromodule_logo_vertical_offset"
            android:src="@mipmap/logo_cata" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/black"
        android:src="@null"
        android:id="@+id/iv_black_mask"
        android:layout_gravity="center"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/intromodule_high_temp_padding_bottom"
        android:paddingStart="@dimen/intromodule_high_temp_padding_end"
        android:paddingEnd="@dimen/intromodule_high_temp_padding_end"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_high_temp_normal"
            android:layout_gravity="center"
            android:id="@+id/iv_hob_status"
            android:visibility="invisible"
            />

        <com.ekek.viewmodule.hob.Hob90HighTempStatusView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hht"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <com.ekek.viewmodule.hob.Hob80HighTempStatusView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hht_80"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/hood"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>