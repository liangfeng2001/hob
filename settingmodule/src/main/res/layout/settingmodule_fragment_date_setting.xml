<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/settingmodule_fragment_date_time_setting_title_set_date"
        android:textColor="@android:color/white"
        android:drawableLeft="@mipmap/ic_date_and_time"
        android:drawablePadding="15dp"
        android:textStyle="normal"
        android:typeface="serif"
        android:textSize="@dimen/viewmodule_setting_title_title_size"
        android:paddingTop="0dp"
        android:id="@+id/tv_title"
        />

    <LinearLayout
        android:layout_width="975dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_title"
        android:gravity="center"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        >
        <com.ekek.commonmodule.views.WheelViewEx
            android:id="@+id/wv_month"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <com.ekek.commonmodule.views.WheelViewEx
            android:id="@+id/wv_day"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <com.ekek.commonmodule.views.WheelViewEx
            android:id="@+id/wv_year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:background="@null"
            />

        <com.ekek.commonmodule.views.WheelViewEx
            android:id="@+id/wv_test2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center"
            android:visibility="invisible"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:id="@+id/right_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:src="@mipmap/right_back"
        android:scaleType="centerInside"
        android:visibility="visible"/>


</RelativeLayout>