<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.ekek.viewmodule.common.FocusedTextView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/settingmodule_setting_title_security"
        android:textColor="@android:color/white"
        android:drawableLeft="@mipmap/ic_update"
        android:drawablePadding="15dp"
        android:textStyle="normal"
        android:typeface="serif"
        android:textSize="@dimen/viewmodule_setting_title_title_size"
        android:paddingTop="0dp"
        android:id="@+id/tv_title"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        />

    <com.ekek.viewmodule.passwordview.PinPasswordView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/ppv"
        ></com.ekek.viewmodule.passwordview.PinPasswordView>

    <!--<LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:gravity="center|bottom"
        android:layout_height="match_parent">



    </LinearLayout>-->
</RelativeLayout>