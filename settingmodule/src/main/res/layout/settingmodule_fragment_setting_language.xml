<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/settingmodule_setting_title_language"
        android:textColor="@android:color/white"
        android:drawableLeft="@mipmap/ic_language"
        android:drawablePadding="15dp"
        android:textStyle="normal"
        android:typeface="serif"
        android:textSize="@dimen/viewmodule_setting_title_title_size"
        android:paddingTop="0dp"
        android:id="@+id/tv_title"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tv_title"
        android:divider="#00000000"
        android:dividerHeight="68dp"
        android:fadeScrollbars="false"
        android:id="@+id/lv_language"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:id="@+id/right_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:scaleType="centerInside"
        android:src="@mipmap/right_back"
        android:visibility="visible"/>
</RelativeLayout>