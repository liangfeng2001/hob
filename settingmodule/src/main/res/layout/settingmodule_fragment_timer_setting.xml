<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:background="@mipmap/bg_timer_setting"
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/ll_timer"
        >
        <com.ekek.viewmodule.common.NumberPickerView
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:paddingStart="110dp"
            android:paddingEnd="0dp"
            app:npv_ShowCount="3"
            app:npv_ShowDivider="false"
            app:npv_TextSizeNormal="60sp"
            app:npv_TextSizeSelected="140sp"
            app:npv_TextColorSelected="@android:color/white"
            app:npv_TextColorNormal="#55ffffff"
            app:npv_WrapSelectorWheel="true"
            app:npv_RespondChangeOnDetached="false"
            android:id="@+id/npv_timer_hour"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingmodule_timer_symbol"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="@android:color/white"
            android:textSize="140sp"
            android:id="@+id/tv_timer_center"
            android:clickable="true"
            />
        <com.ekek.viewmodule.common.NumberPickerView
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:paddingStart="0dp"
            android:paddingEnd="70dp"
            app:npv_ShowCount="3"
            app:npv_ShowDivider="false"
            app:npv_TextSizeNormal="60sp"
            app:npv_TextSizeSelected="140sp"
            app:npv_TextColorSelected="@android:color/white"
            app:npv_TextColorNormal="#55ffffff"
            app:npv_WrapSelectorWheel="true"
            app:npv_RespondChangeOnDetached="false"
            android:id="@+id/npv_timer_minute"
            />
    </LinearLayout>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingRight="100dp"
        android:src="@mipmap/ic_timer_setting_back"
        android:background="@null"
        android:id="@+id/ib_timer_setting_back"
        />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="670dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_timer_setting_cancel"
        android:background="@null"
        android:id="@+id/ib_timer_setting_cancel"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:layout_centerInParent="true"
        android:textSize="100sp"
        android:id="@+id/tv_timer_content"
        android:textColor="@android:color/white"
        android:text="01 00"
        android:visibility="invisible"
        android:clickable="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_info"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/ic_alarm_setting_info"
        android:layout_marginEnd="50dp"/>

</RelativeLayout>