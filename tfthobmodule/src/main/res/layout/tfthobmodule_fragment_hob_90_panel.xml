<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="180dp"
    android:background="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/tfthobmodule_demo"
        android:textSize="76dp"
        android:textColor="@color/viewmodule_white"
        android:layout_centerHorizontal="true"/>

    <com.ekek.viewmodule.hob.Hob80RectangleCookerNew
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:viewmodule_retangle_cooker_id="1|2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:id="@+id/hrc_a"
        />

    <com.ekek.viewmodule.hob.Hob80RectangleCookerTest
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        app:viewmodule_retangle_cooker_id="1|2"
        android:id="@+id/h8rc_ab"
        >
    </com.ekek.viewmodule.hob.Hob80RectangleCookerTest>

<!--android:layout_marginLeft="50dp"-->
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="250dp"
        android:background="@null"
        android:gravity="center|left"
        android:orientation="vertical"

        >

        <com.ekek.viewmodule.hob.Hob90CircleCooker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="48dp"
            app:viewmodule_cooker_id="3"
            android:id="@+id/hbcc_b"
            android:visibility="visible"
            />
    </LinearLayout>


    <com.ekek.viewmodule.hob.Hob80RectangleCookerNew
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignRight="@id/hbcc_b"
        app:viewmodule_retangle_cooker_id="6|5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:id="@+id/hrc_c"
        />

    <com.ekek.viewmodule.hob.Hob80RectangleCookerTest
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:viewmodule_retangle_cooker_id="6|5"
        android:id="@+id/h8rc_ef"
        android:layout_marginRight="0dp"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@null"
        android:gravity="left"
        android:paddingLeft="0dp"
        android:id="@+id/ll_bottom_view"
        android:layout_marginBottom="8dp"
        >

        <com.ekek.viewmodule.common.BatteryIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/biv_bluetooth"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            />

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/fl_hood_view"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:background="@null"
                android:src="@mipmap/ic_hood"
                android:id="@+id/ib_hood"
                android:layout_gravity="center|left"
                android:visibility="gone"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:background="@null"
                android:src="@mipmap/icon_hob60_fan_mask"
                android:id="@+id/ib_hood_mask"
                android:visibility="gone"
                android:layout_gravity="center|left"
                />

        </FrameLayout>

    </LinearLayout>




</RelativeLayout>