<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="64dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            >
            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_cooking_tables_detail_meat"
                android:background="@null"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ib_back"
                android:layout_toStartOf="@+id/ic_info"
                android:layout_marginStart="20dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tfthobmodule_cooking_table_title_text_size"
                android:textStyle="bold"
                android:text="@string/tfthobmodule_cooking_tables_type_meat"
                android:id="@+id/tv_title"/>

            <ImageView
                android:id="@+id/ic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/ic_info"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="@dimen/viewmodule_padding_small"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/white"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_cooking_list"
            android:divider="@android:color/white"
            android:dividerHeight="1dp"
            android:paddingEnd="20dp"
            android:scrollbarStyle="outsideOverlay"
            android:fadeScrollbars="false"/>

    </LinearLayout>

</FrameLayout>