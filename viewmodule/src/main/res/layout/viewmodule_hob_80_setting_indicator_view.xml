<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/bg_hob_80_high_temp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_seperate_setting_indicator"
        android:layout_gravity="top|left"
        android:layout_marginTop="5dp"
        android:paddingLeft="6dp"
        android:id="@+id/iv_seperate_up"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_seperate_high_temp_status"
        android:layout_gravity="top|left"
        android:layout_marginTop="5dp"
        android:paddingLeft="6dp"
        android:id="@+id/iv_seperate_red_up"
        android:visibility="invisible"
        />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/bg_hob_80_seperate_setting_indicator"
    android:layout_gravity="bottom|left"
    android:layout_marginBottom="6dp"
    android:paddingLeft="6dp"
    android:id="@+id/iv_seperate_down"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_seperate_high_temp_status"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="6dp"
        android:paddingLeft="6dp"
        android:id="@+id/iv_seperate_red_down"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_union_setting_indicator"
        android:layout_gravity="center|left"
        android:visibility="invisible"
        android:paddingLeft="6dp"
        android:id="@+id/iv_union"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_union_high_temp_status"
        android:layout_gravity="center|left"
        android:visibility="invisible"
        android:paddingLeft="6dp"
        android:id="@+id/iv_red_union"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_hob_high_temp_dash"
        android:layout_gravity="center|left"
        android:paddingLeft="8dp"
        android:id="@+id/iv_dash_left"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_big_circle_setting_indicator"
        android:layout_gravity="center|top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_big_circle_high_temp"
        android:layout_gravity="center|top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_red_center"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_small_circle_setting_indicator"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/iv_right"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_hob_80_small_circle_high_temp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/iv_red_right"
        android:visibility="invisible"
        />

</FrameLayout>